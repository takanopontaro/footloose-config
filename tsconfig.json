{
  "compilerOptions": {
    "allowUmdGlobalAccess": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["./src/**/*"]
}
